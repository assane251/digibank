<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gm.rahmanproperties.digibank.controllers.admin.DashboardAdminController">

    <JFXToolbar style="-fx-background-color: #4682B4;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Tableau de Bord Admin" />
        </HBox>
    </JFXToolbar>

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="60.0">
        <GridPane fx:id="contentGrid" hgap="20" prefWidth="1240.0" vgap="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Section Liste des Clients -->
            <VBox prefWidth="600.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Liste des Clients en attente" />
                <TableView fx:id="clientTable" prefHeight="250.0" prefWidth="570.0">
                    <columns>
                        <TableColumn fx:id="nomColumn" prefWidth="110.0" text="Nom" />
                        <TableColumn fx:id="prenomColumn" prefWidth="110.0" text="PrÃ©nom" />
                        <TableColumn fx:id="emailColumn" prefWidth="160.0" text="Email" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Statut" />
                        <TableColumn fx:id="actionColumn" prefWidth="90.0" text="Actions" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Section Transactions Suspectes -->
            <VBox prefWidth="600.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Transactions Suspectes" />
                <Pane fx:id="chartPane" prefHeight="250.0" prefWidth="570.0" />
            </VBox>

            <!-- Section Boutons de navigation -->
            <HBox alignment="CENTER" prefHeight="80.0" spacing="20" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
                <JFXButton fx:id="detailsClientsBtn" onAction="#showClientDetails" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Gestion Clients" />
                <JFXButton fx:id="detailsComptesBtn" onAction="#showCompteDetails" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Gestion Comptes" />
                <JFXButton fx:id="detailsTransactionsBtn" onAction="#showTransactionDetails" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Surveillance Transactions" />
                <JFXButton fx:id="detailsTicketsBtn" onAction="#showTicketDetails" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #4682B4; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" text="Gestion Tickets" />
            </HBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </ScrollPane>

    <stylesheets>
        <URL value="@../styles/dashboard.css" />
    </stylesheets>
</AnchorPane>
